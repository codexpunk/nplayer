  "scripts": {
    "serve:nplayer": "webpack serve --config ./scripts/webpack.dev.js --env target=nplayer",
    "serve:danmaku": "webpack serve --config ./scripts/webpack.dev.js --env target=nplayer-danmaku  fixture=danmaku",
